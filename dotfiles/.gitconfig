[user]
	name = Rickard Dybeck
	email = dybeck@spotify.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[jira]
    user = rickard.dybeck
[giggle]
	main-window-maximized = false
	main-window-geometry = 358x949+720+18
	main-window-view = HistoryView
	history-view-vpane-position = 608
	file-view-vpane-position = 658
[alias]
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff \
                --minimal \
                --word-diff=color \
                --word-diff-regex='([0-9@A-Za-z]+|[^0-9@A-Za-z]+)'
  lp = log \
                -p \
                --word-diff=color \
                --word-diff-regex='([0-9@A-Za-z]+|[^0-9@A-Za-z]+)'
  lg = log --graph --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\"
  ds = diff --staged
  su = submodule update --init --recursive
  fix = commit --amend --no-edit
  up = pull --rebase --autostash
[push]
	default = current
[core]
	editor = vim
	whitespace = trailing-space,space-before-tab
	excludesfile = /home/dybeck/.gitignore_global
	pager = less -F -X
[rebase]
	autosquash = true
[advice]
	statusHints = false
[rerere]
	enabled = true
[merge]
    stat = true
    tool = meld
    conflictstyle = diff3
[branch]
	autosetuprebase = always
